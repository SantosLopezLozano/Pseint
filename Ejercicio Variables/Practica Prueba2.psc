Algoritmo MiNombre
	Definir nombre Como Caracter;
	Escribir Sin Saltar "Establezca un nombre ";
	Leer nombre;
	Escribir  "hola " , nombre;
	Si nombre = "Santos" o nombre = "Sanidad" Entonces
		Escribir  "me encanta ese nombre";
	SiNo
		Si No nombre = "Mario" Entonces
			Escribir "Pase un buen día";
		FinSi
	FinSi
	Si nombre = "Mario" Entonces
		Escribir  "ojalá te mueras pronto";
	FinSi
	Escribir  "adiós ", nombre;
FinAlgoritmo
